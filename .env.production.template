# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# CORS Settings - Update with your actual domain
STORE_CORS=https://your-storefront-domain.com
ADMIN_CORS=https://your-admin-domain.com
AUTH_CORS=https://your-admin-domain.com

# Database - EasyPanel will provide PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Redis - EasyPanel can provide Redis
REDIS_URL=redis://host:port

# Security - Generate strong secrets
JWT_SECRET=your-super-secret-jwt-key-here
COOKIE_SECRET=your-super-secret-cookie-key-here

# Database name
DB_NAME=cubitstore-production

# Port
PORT=9000 